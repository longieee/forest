            <fr:route>SP-000A.xml</fr:route>
            <fr:title text="Property of Brownian Motion">Property of Brownian Motion</fr:title>
            <fr:taxon>Lemma</fr:taxon>
            <fr:date>
              <fr:year>2025</fr:year>
              <fr:month>5</fr:month>
              <fr:day>29</fr:day>
            </fr:date>
            <fr:authors />
          </fr:frontmatter>
          <fr:mainmatter>
            <fr:p>Let <fr:tex display="inline"><![CDATA[ (B_{t} )_{t\geq  0} ]]></fr:tex> be a <fr:link type="local" href="SP-0001.xml" addr="SP-0001" title="Brownian motion">Brownian Motion</fr:link>, then
  <fr:tex display="block"><![CDATA[     \mathbb {E} \left [ B_{t}  \right ] =0 \quad  \text {and} \quad  \mathbb {E} \left ( B_{s} B_{t}  \right ) = \text {Cov}\left ( B_{s} , B_{t}    \right ) = \min  \left \{ s,t \right \}    ]]></fr:tex></fr:p>
          </fr:mainmatter>
          <fr:backmatter />
        </fr:tree>
        <fr:tree toc="true" numbered="false" show-heading="true" show-metadata="true" expanded="false" root="false" xmlns:fr="http://www.jonmsterling.com/jms-005P.xml">
